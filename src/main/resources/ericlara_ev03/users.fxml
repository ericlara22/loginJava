               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <Pane fx:id="paneEdit" layoutX="407.0" layoutY="103.0">
               <children>
                  <Label layoutX="40.0" prefHeight="25.0" prefWidth="38.0" text="Rut">

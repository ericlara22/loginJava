            <Label fx:id="labelWelcome" layoutX="29.0" layoutY="30.0" text="Bienvenido">
               <font>
                  <Font name="Britannic Bold" size="31.0" />
               </font>
            </Label>
            <Button fx:id="buttonCreate" layoutX="486.0" layoutY="363.0" mnemonicParsing="false" onAction="#createUser" prefHeight="31.0" prefWidth="73.0" text="Aceptar" />
            <Button fx:id="buttonEdit" layoutX="486.0" layoutY="363.0" mnemonicParsing="false" onAction="#updateUser" prefHeight="31.0" prefWidth="73.0" text="Aceptar" />

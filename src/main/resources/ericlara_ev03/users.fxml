            <Button fx:id="buttonAdd" layoutX="104.0" layoutY="360.0" mnemonicParsing="false" onAction="#createPanel" prefHeight="31.0" prefWidth="73.0" text="Agregar" />
            <Button fx:id="buttonCancel" layoutX="595.0" layoutY="363.0" mnemonicParsing="false" onAction="#cancelActions" prefHeight="31.0" prefWidth="73.0" text="Cancelar" />
